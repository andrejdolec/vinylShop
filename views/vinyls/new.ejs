<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Add Vinyl</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/vinyls" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="apiID">API ID:</label>
                    <input class="form-control" type="text" id="apiID" name="apiID" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id="image" name="image" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="available">Units available:</label>
                    <input class="form-control" type="number" id="available" name="availableNumber" required>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Add Vinyl</button>
                </div>
            </form>
            <a href="/vinyls">All Vinyls</a>
        </div>
    </div>