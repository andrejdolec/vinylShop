<% layout('layouts/boilerplate')%>
    <% if (searchedVinyls.length===0) { %>
        <h1>No Search Results</h1>
        <% } else { %>
            <h1>Search Results</h1>
            <div class="row mt-3">
                <% for (let vinyl of searchedVinyls) { %>
                    <div class="card col-3 m-3" style="width: 18rem;">
                        <a href="/vinyls/<%= vinyl._id %>">
                            <img class="card-img-top" src="<%= vinyl.image %> " alt="Card image cap">
                        </a>
                        <div class="card-body">
                            <h4 class="card-title text-center">
                                <a href="/vinyls/<%= vinyl._id %>" class="text-decoration-none text-dark">
                                    <%= vinyl.album %> : <%= vinyl.artist %>
                                </a>
                            </h4>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                $<%= vinyl.price %>
                                    <% if (vinyl.available>0){ %>
                                        / In-Stock
                                        <% } %>
                            </li>
                        </ul>
                        <div class="card-body d-inline-flex align-middle">
                            <a href="/add-to-cart/<%= vinyl._id %>" type="button" class="btn btn-success m-auto">Add To
                                Card</a>
                        </div>
                    </div>
                    <% } %>
            </div>
            <% } %>